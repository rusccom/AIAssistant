{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*", "../node_modules/@types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/scripts"]
} 